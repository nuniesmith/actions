# Environment Configuration Template
# Copy this file to .env and fill in your specific values

# Service Configuration
SERVICE_NAME=your-service-name
DOCKER_USERNAME=your-docker-username

# Authentication & Security
JWT_SECRET=your-jwt-secret-here
DB_PASSWORD=your-database-password

# Database Configuration
DATABASE_URL=postgresql://your-service-name_user:your-database-password@database:5432/your-service-name

# Redis Configuration
REDIS_URL=redis://redis:6379

# External Services (Optional)
# EXTERNAL_API_KEY=your-api-key
# MAIL_SERVER_URL=smtp://your-mail-server
# MONITORING_ENDPOINT=https://your-monitoring-service

# Development/Debug Settings
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Domain Configuration
DOMAIN_NAME=your-service.7gram.xyz
SSL_EMAIL=admin@7gram.xyz

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
